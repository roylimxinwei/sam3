# Application Settings
APP_NAME="Food Classifier API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Origins (JSON array format)
# Add your React Native app URLs here
CORS_ORIGINS=["http://localhost:3000","http://localhost:8081","exp://localhost:19000","http://10.0.2.2:8000"]

# Supabase Configuration
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=your-anon-key

# Model Paths
MODEL_PATH=../../testing/sgfood233_convnext_base.onnx
LABELS_PATH=../../testing/foodsg233_labels.json

# SAM3 Segmentation
SAM3_ENABLED=true
SAM3_CONFIDENCE_THRESHOLD=0.5

# Inference Settings
DEFAULT_TOPK=5
MAX_TOPK=10
MAX_BATCH_SIZE=50

# Nutrition Scraping
NUTRITION_HEADLESS=true
NUTRITION_CACHE_TTL=3600

# File Upload Limits
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["jpg","jpeg","png","webp","bmp"]


